PROGRAM Testall;TYPEByte=0..255;Word=0..65535;Block_descrip=RECORD  drive:Byte;    {Often set to 255 to indicate disc changed.                  If so, it will be caught at the cache request stage}  blk:Word  {Block number. Each block is <blk_size> bytes}END;VARa,b:Word;block:Block_descrip;no_blocks:Word;ch:Char;PROCEDURE IniLow; EXTERNAL;PROCEDURE IniDsk(drive:Byte; no_blocks:Word); EXTERNAL;PROCEDURE Dalloc(blk:Block_descrip); EXTERNAL;PROCEDURE Alloc(blk:Block_descrip); EXTERNAL;PROCEDURE F_blk(VAR blk:Block_descrip;VAR no_blks:Word); EXTERNAL;BEGINIniLow;REPEAT  Writeln;  Write('{A,D,F,I},block,drive,no_blocks :');  Readln(ch,block.blk,block.drive,no_blocks);  CASE ch OF    'A','a':Alloc(block);    'D','d':Dalloc(block);    'F','f':BEGIN      F_blk(block,no_blocks);      a:=block.blk;b:=block.drive;      Writeln('block=',a:3,' drv=',b:3,' no_blocks='       ,no_blocks:3);    END;    'I','i':Inidsk(block.drive,no_blocks);    OTHERWISE Writeln('You''ve fucked it')  ENDUNTIL False;END.